<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_main"
    >

    <ImageView
        android:id="@+id/img_handle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/shake_handle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/main_img_margin_top"
        />

    <ImageView
        android:id="@+id/img_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/a_bg"
        android:layout_below="@+id/img_handle"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/txt_show_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_txt_show_count"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:onClick="onClick"
        android:textSize="28sp"
        android:layout_marginBottom="@dimen/main_txt_margin_bottom"/>
</RelativeLayout>
